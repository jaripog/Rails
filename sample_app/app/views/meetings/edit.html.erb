<% provide(:title, "Edit user") %>
<% provide(:button_text, 'Save Changes') %>
<h1>update your meeting</h1>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(:meeting,url: newMeeting_path ) do |f| %>
            <%= f.label :title%>
            <%= f.text_field :title,class: 'form-control'%>

            <%= f.label :description%>
            <%= f.text_area :description,class: 'form-control'%>

            <%= f.label :startTime%>
            <%= f.datetime_field :startTime %>

            <%= f.label :endTime%>
            <%= f.datetime_field :endTime %>

            <%= f.label :isActive%>
            <%= f.check_box :isActive,  style: 'margin-top:-2%;float:left;' %>
                    
            <%= f.submit "Create Meeting", class: 'btn btn-primary'%>
        <%end%>
        
    </div>
    </div>